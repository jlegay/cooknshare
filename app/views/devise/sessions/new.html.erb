<div class="container login-page devise-page">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  label: 'Mot de passe',
                  input_html: { autocomplete: "current-password" } %>
      <%#= f.input :remember_me, label: 'Se souvenir de moi', as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Se connecter", class: 'full-btn-red btn-login' %>
    </div>
  <% end %>
  <br>
  <div class="links">
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name) %><br />
    <% end %>
    <br>
    <p>OU</p>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "S'inscrire", new_registration_path(resource_name), class: 'btn empty-btn-red sign-up-btn' %><br />
    <% end %>
  </div>

</div>
